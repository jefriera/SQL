
Create Table Movies_2023 (ID INTEGER PRIMARY KEY,
    name TEXT,
    genre TEXT, 
    release_date INTEGER,
    run_time INTEGER,
    distributor TEXT,
    director TEXT,
    season TEXT,
    rotten_tomatoes INTEGER,
    budget INTEGER,
    box_office INTEGER,
    film_rating TEXT,
    cast TEXT,
    soundtrack TEXT,
    plot TEXT,
    franchise_or_series TEXT);
    
